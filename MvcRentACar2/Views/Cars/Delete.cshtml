@model MvcRentACar2.Models.Cars

@{
    ViewData["Title"] = "Изтриване";
}

<h1>Изтриване</h1>

<h3>Наистина ли искате да изтриете това?</h3>
<div>
    <h4>Cars</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Марка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marka)
        </dd>
        <dt class = "col-sm-2">
            Град
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            Дата и час на взимане
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentCar1)
        </dd>
        <dt class = "col-sm-2">
            Дата и час на връщане
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentCar2)
        </dd>
        <dt class = "col-sm-2">
            Ограничени километри
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Km)
        </dd>
        <dt class = "col-sm-2">
            Цена на услугата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CarId" />
        <input type="submit" value="Изтрий" class="btn btn-danger" />
        <a asp-action="Index">Обратно към списъка</a>
    </form>
</div>
