@model MvcRentACar2.Models.Cars

@{
    ViewData["Title"] = "Изтриване";
}

<h1 class="center">Изтриване</h1>

<h3>Наистина ли искате да изтриете това?</h3>
<div>
    <h4>Коли</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Марка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marka)
        </dd>
        <dt class = "col-sm-2">
            Регистрационен номер на колата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegNumber)
        </dd>
        <dt class = "col-sm-2">
            Клиент
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientId)
        </dd>
        <dt class = "col-sm-2">
            Дата и час на отдаване на колата под наем
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentCar)
        </dd>
        <dt class = "col-sm-2">
            Изминати километри
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Km)
        </dd>
        <dt class = "col-sm-2">
            Служител
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmployeeId)
        </dd>
        <dt class = "col-sm-2">
            Цена на услугата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CarId" />
        <input type="submit" value="Изтрий" class="btn btn-danger" />
        <a asp-action="Index">Обратно към списъка</a>
    </form>
</div>
