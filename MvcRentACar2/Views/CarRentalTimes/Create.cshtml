@model MvcRentACar2.Models.CarRentalTime

@{
    ViewData["Title"] = "Създаване";
}

<h1>Създаване</h1>

<h4>Дата и час на взимане и връщане</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Име и фамилия</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTime1" class="control-label">Дата и час</label>
                <input asp-for="DateTime1" class="form-control" />
                <span asp-validation-for="DateTime1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Обратно към списъка</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
