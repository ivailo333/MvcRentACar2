@model MvcRentACar2.Models.CarRentalTime

@{
    ViewData["Title"] = "Изтриване";
}

<h1 class="center">Изтриване</h1>

<h3>Наистина ли искате да изтриете това?</h3>
<div>
    <h4>Час за наемане на колата под наем"</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Клиент
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientId)
        </dd>
        <dt class = "col-sm-2">
            Служител
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmployeeId)
        </dd>
        <dt class = "col-sm-2">
            Дата и час
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime1)
        </dd>
        <dt class = "col-sm-2">
            Продължителност
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" />
        <a asp-action="Index">Обратно към списъка</a>
    </form>
</div>
