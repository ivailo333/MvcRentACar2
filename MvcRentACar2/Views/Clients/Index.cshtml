@model IEnumerable<MvcRentACar2.Models.Clients>

@{
    ViewData["Title"] = "Клиенти";
}

<h1 class="center">Клиенти</h1>

<p>
    <a asp-action="Create">Създай нов</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Име
            </th>
            <th>
                Фамилия
            </th>
            <th>
                Дата на раждане
            </th>
            <th>
                Адрес
            </th>
            <th>
                Телефон
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClientId">Редактиране</a>
                <a asp-action="Details" asp-route-id="@item.ClientId">Детайли</a>
                <a asp-action="Delete" asp-route-id="@item.ClientId">Изтриване</a>
            </td>
        </tr>
}
    </tbody>
</table>
